@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">

    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">Welcome to the Student Management Portal</h4>
        <ul class="mb-0">
            <li><strong>CRUD operations</strong> for <span class="text-primary">User</span> and <span class="text-primary">Student</span> are implemented using <strong>Entity Framework Core</strong> and <strong>AutoMapper</strong>.</li>
            <li><strong>Authentication</strong> and <strong>Authorization</strong> will be added in the <span class="text-danger">next practical</span>.</li>
        </ul>
    </div>

    <div class="d-flex gap-3">
        @Html.ActionLink("Student List", "Index", "Students", null, new { @class = "btn btn-success" })
        @Html.ActionLink("User List", "Index", "Users", null, new { @class = "btn btn-primary" })
    </div>

</div>
